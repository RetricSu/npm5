{
  "name": "@retric/npm5",
  "version": "0.1.0",
  "description": "CKB JavaScript Smart Contract project",
  "type": "module",
  "bin": {
    "npm5": "./build/tool/cli.js"
  },
  "scripts": {
    "build": "node scripts/build-all.js",
    "build:contract": "node scripts/build-contract.js",
    "test": "node scripts/build-all.js && jest",
    "add-contract": "node scripts/add-contract.js",
    "deploy": "node scripts/build-all.js && node scripts/deploy.js",
    "build:cli": "esbuild --platform=node --format=esm --banner:js=\"import { createRequire } from 'module'; import { fileURLToPath } from 'url'; const require = createRequire(import.meta.url); const __dirname = fileURLToPath(new URL('.', import.meta.url)); const __filename = fileURLToPath(import.meta.url);\" --minify --bundle tool/cli.ts --outfile=build/tool/cli.js",
    "format": "prettier --write .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ckb-js-std/bindings": "~1.0.0",
    "@ckb-js-std/core": "~1.0.0"
  },
  "devDependencies": {
    "@ckb-ccc/core": "~1.5.3",
    "@npmcli/arborist": "^9.1.4",
    "@types/jest": "~29.5.14",
    "@types/node": "~22.13.8",
    "@types/npm-packlist": "^7.0.3",
    "arborist": "link:@types/@npmcli/arborist",
    "ckb-testtool": "~1.0.3",
    "commander": "^14.0.1",
    "dotenv": "^17.2.1",
    "esbuild": "~0.25.8",
    "jest": "~29.7.0",
    "npm-packlist": "^10.0.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tar": "^7.4.3",
    "ts-jest": "~29.2.6",
    "typescript": "~5.8.2"
  }
}
